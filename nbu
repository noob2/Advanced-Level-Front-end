
//Write a program that reads an integer number and generates all the permutations of its digits. Use recursion.

#include "stdafx.h"
#include <iostream>
#include <string> 
#include <stdio.h>

using namespace std;

void permute(char a[], int i, int n)
{
	int j;
	if (i == n)
		cout << a << endl;
	else
	{
		for (j = i; j <= n; j++)
		{
			swap(a[i], a[j]);
			permute(a, i + 1, n);
			swap(a[i], a[j]);
		}
	}
}

int main()
{
	int number;
	cin >> number;
	string s = to_string(number);
	char a[20];
	strcpy_s(a, s.c_str());

	permute(a, 0, s.length() - 1);

	return 0;
}
